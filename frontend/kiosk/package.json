{
  "name": "kiosk-client",
  "version": "0.1.0",
  "description": "Kiosk Electron client for Greek civilization interactive experience",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "nodemon --watch electron --exec electron .",
    "build": "vite build",
    "preview": "vite preview"
  },
  "keywords": ["kiosk", "electron", "webrtc", "mediapipe"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "livekit-client": "^2.0.0",
    "@mediapipe/hands": "^0.4.1646424915",
    "@mediapipe/camera_utils": "^0.3.1620248953"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "vite": "^5.0.0",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}
